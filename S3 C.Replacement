#include<bits/stdc++.h>
using namespace std;

int main()
{
    int n,i;
    cin>>n;
    int ar[n];
    for(i=0;i<n;i++){
        cin>>ar[i];
    }
    for(i=0;i<n;i++){
        if(ar[i]<0){
            ar[i]=2;
        }
        else if(ar[i]>0){
            ar[i]=1;
        }
    }
    for(i=0;i<n;i++){
        cout<<ar[i]<<" ";
    }
    return 0;
}
